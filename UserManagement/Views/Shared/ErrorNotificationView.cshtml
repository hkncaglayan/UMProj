@using UserManagement.Models
@model ErrorNotificationModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1>
                    @Model.Header;
                </h1>
                <h2>

                    @Model.Title;
                </h2>
                <div class="error-details">
                    @foreach (var msg in Model.Items)
                    {
        @msg <br />}
                    @*Sorry, an error has occured, Requested page not found!*@
                </div>
                <div class="error-actions">
                    <a href="http://www.jquery2dotnet.com" class="btn btn-primary btn-lg">
                        <span class="glyphicon glyphicon-home"></span>
                        Take Me Home
                    </a><a href="http://www.jquery2dotnet.com" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-envelope"></span> Contact Support </a>
                </div>
            </div>
        </div>
    </div>
</div>
@{ var js = string.Empty;
    if (Model.IsRedirect)
    {
        js = "setTimeout(function () {window.location = '" + Model.RedirectionUrl + "'}, " + Model.RedirectionTime + "); ";
    } }
<script>
    $(function () {
        @Html.Raw(js);
    });
</script>